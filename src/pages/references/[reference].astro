---
import ReferencePage from '@/components/ReferencePage.svelte';
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';

export async function getStaticPaths() {
    
    let references: { title: string, slug: string, content: string }[] = [
        { title: 'Reference 1', slug: 'reference-1', content: 'Reference 1 content goes here...' },
        { title: 'Reference 2', slug: 'reference-2', content: 'Reference 2 content goes here...' },
        { title: 'Reference 3', slug: 'reference-3', content: 'Reference 3 content goes here...' },
    ];

    return references.map((reference) => ({
        params: { reference: reference.slug },
        props: { reference: reference },
    }));
};

const {reference} = Astro.props;
---

<StarlightPage frontmatter={{title: reference.title}}>
    <ReferencePage {reference}/>
</StarlightPage>